					var nn = parseInt(rangeslider.value, 10);
					if (nn== -1000) return (feature.properties.Alt)
					else
					return (feature.properties.Alt >= (nn-500) && feature.properties.Alt <= (nn +500) );
				}
		}).addTo(map);

// SIGMET
var	sigmet = L.realtime({
